import React from "react";
import { BrowserRouter, Routes, Route, Navigate } from "react-router-dom";

import ServiceAreas from "./pages/ServiceAreas";
import DairyFlatAirportShuttle from "./pages/DairyFlatAirportShuttle";
import LateNightAirportShuttle from "./pages/LateNightAirportShuttle";
import WarkworthAirportShuttle from "./pages/WarkworthAirportShuttle";

function CockpitPage() {
  return (
    <div style={{ padding: 32, fontFamily: "system-ui, Segoe UI, Arial" }}>
      <h1>Cockpit</h1>
      <p><b>STAMP:</b> COCKPIT_FORCE_ROUTE_20260208</p>
      <p>If you see this, /cockpit is a valid client route.</p>
    </div>
  );
}

function AdminPage() {
  return (
    <div style={{ padding: 32, fontFamily: "system-ui, Segoe UI, Arial" }}>
      <h1>Admin Panel</h1>
      <p><b>STAMP:</b> ADMIN_ROUTE_APPJS_20260208</p>
      <p>If you can see this, /admin is now a valid client route.</p>
      <div style={{ marginTop: 16, padding: 16, border: "1px solid #ccc" }}>
        <p>Next: wire Cockpit + backend health calls here.</p>
      </div>
    </div>
  );
}

export default function App() {
  return (
    <BrowserRouter>
      <Routes>
        {/* HOME: redirect to a real page so blank root never happens */}
        <Route path="/" element={<Navigate to="/service-areas" replace />} />

        {/* Existing pages */}
        <Route path="/service-areas" element={<ServiceAreas />} />
        <Route path="/dairy-flat-airport-shuttle" element={<DairyFlatAirportShuttle />} />
        <Route path="/late-night-airport-shuttle" element={<LateNightAirportShuttle />} />
        <Route path="/warkworth-airport-shuttle" element={<WarkworthAirportShuttle />} />

        {/* Admin */}
        <Route path="/admin" element={<AdminPage />} />

        {/* Fallback: never white-screen on unknown route */}
        <Route path="*" element={<Navigate to="/service-areas" replace />} />
      </Routes>
    </BrowserRouter>
  );
}