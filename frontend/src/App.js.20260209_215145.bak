import React from "react";
import { BrowserRouter, Routes, Route, Navigate, useLocation } from "react-router-dom";

import ServiceAreas from "./pages/ServiceAreas";
import DairyFlatAirportShuttle from "./pages/DairyFlatAirportShuttle";
import LateNightAirportShuttle from "./pages/LateNightAirportShuttle";
import WarkworthAirportShuttle from "./pages/WarkworthAirportShuttle";
import Cockpit from "./admin/Cockpit";
import RealAdminLogin from "./pages/AdminLogin";
import RealAdminBookings from "./pages/AdminDashboard";

function AdminLayout({ children }) {
  return (
    <div style={{ fontFamily: "system-ui, Segoe UI, Arial" }}>
      <div style={{ display: "flex", gap: 16, padding: 14, background: "#111", color: "#fff" }}>
        <a href="/admin/bookings" style={{ color: "#fff" }}>Bookings</a>
        <a href="/admin/cockpit" style={{ color: "#fff" }}>Cockpit</a>
        <a href="/service-areas" style={{ color: "#fff" }}>Public Site</a>
      </div>
      {children}
    </div>
  );
}

function AdminLoginPlaceholder() {
  return (
    <div style={{ padding: 32 }}>
      <h1>Admin Login</h1>
      <p><b>STAMP:</b> HIBI_TEAM_PACK_FINISH_003_20260209</p>
      <p>Placeholder login is showing because we could not auto-detect the original admin login component.</p>
      <p>Next step: we will mount the real login component once identified.</p>
    </div>
  );
}

function AdminBookingsPlaceholder() {
  return (
    <div style={{ padding: 32 }}>
      <h1>Bookings Admin</h1>
      <p><b>STAMP:</b> HIBI_TEAM_PACK_FINISH_003_20260209</p>
      <p>Placeholder bookings page is showing because we could not auto-detect the original bookings admin component.</p>
      <p>Next step: we will mount the real bookings admin component once identified.</p>
    </div>
  );
}

function AppRoutes() {
  const loc = useLocation();
  const path = loc?.pathname || "/";

  // ADMIN GUARD MODE: /admin/* cannot be hijacked by marketing redirects.
  if (path.startsWith("/admin")) {
    return (
      <Routes>
        <Route path="/admin" element={<Navigate to="/admin/bookings" replace />} />
        <Route path="/admin/login" element={<RealAdminLogin />} />
        <Route path="/admin/bookings" element={<AdminLayout>{<RealAdminBookings />}</AdminLayout>} />
        <Route path="/admin/cockpit" element={<AdminLayout><Cockpit /></AdminLayout>} />
        <Route path="/admin/*" element={<Navigate to="/admin/login" replace />} />
      </Routes>
    );
  }

  // PUBLIC SITE (unchanged routes)
  return (
    <Routes>
      <Route path="/" element={<Navigate to="/service-areas" replace />} />
      <Route path="/service-areas" element={<ServiceAreas />} />
      <Route path="/dairy-flat-airport-shuttle" element={<DairyFlatAirportShuttle />} />
      <Route path="/late-night-airport-shuttle" element={<LateNightAirportShuttle />} />
      <Route path="/warkworth-airport-shuttle" element={<WarkworthAirportShuttle />} />
      <Route path="*" element={<Navigate to="/service-areas" replace />} />
    </Routes>
  );
}

export default function App() {
  return (
    <BrowserRouter>
      <AppRoutes />
    </BrowserRouter>
  );
}