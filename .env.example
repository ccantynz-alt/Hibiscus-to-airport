# Database Configuration
# Prefer `MONGO_URI`. `MONGO_URL` is still supported for backward compatibility.
# IMPORTANT: this value is the *full MongoDB connection string (URI)*, not a username.
# If Atlas auth logs show a username like `MONGO_URL`, your URI may be misconfigured
# (e.g. `mongodb+srv://MONGO_URL:...@...`). Fix it and rotate DB credentials.
MONGO_URI=mongodb+srv://db_user:db_password@cluster.mongodb.net/?retryWrites=true&w=majority
# Legacy name (optional):
# MONGO_URL=${MONGO_URI}
DB_NAME=hibiscus_airport

# Stripe Payment
STRIPE_SECRET_KEY=sk_test_xxxxx

# Twilio SMS/WhatsApp
TWILIO_ACCOUNT_SID=ACxxxxx
TWILIO_AUTH_TOKEN=xxxxx
TWILIO_PHONE_NUMBER=+1234567890

# Google Maps
GOOGLE_MAPS_API_KEY=AIzaSyxxxxx

# Google OAuth (for admin login)
GOOGLE_CLIENT_ID=xxxxx.apps.googleusercontent.com

# Email Configuration
ADMIN_EMAIL=bookings@bookaride.co.nz

# Application URLs
FRONTEND_URL=https://hibiscustoairport.co.nz
PUBLIC_DOMAIN=https://hibiscustoairport.co.nz

# API Keys
EMERGENT_LLM_KEY=xxxxx
AVIATIONSTACK_API_KEY=xxxxx

# Optional: Admin API Key for backend admin routes
ADMIN_API_KEY=your-secure-admin-key

# Port (set by Render automatically in deployment)
PORT=10000
